{
  "permissions": {
    "deny": [
      "Edit(**/package.json)",
      "Write(**/package.json)",
      "Edit(~/.claude/settings.json)",
      "Write(~/.claude/settings.json)"
    ],
    "allow": [
      "Bash(./ecosystem/scripts/check-wip.sh:*)",
      "Bash(az boards area project list:*)",
      "Bash(az boards iteration project list:*)",
      "Bash(az boards query:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git show:*)",
      "Bash(pnpm audit:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm outdated:*)",
      "Bash(pnpm run type-check:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm type-check:*)",
      "Bash(pnpm why:*)",
      "Read(//home/stephen/.claude/CLAUDE.md)",
      "Read(//Users/shellicar/.claude/skills/**)",
      "WebFetch(domain:next.shadcn-svelte.com)",
      "WebFetch(domain:raw.githubusercontent.com)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/block_dangerous_commands.sh"
          }
        ]
      }
    ]
  },
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "Working"
    ]
  }
}