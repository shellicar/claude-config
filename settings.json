{
  "permissions": {
    "allow": [
      "Bash(./ecosystem/scripts/check-wip.sh:*)",
      "Bash(~/.claude/skills/*/scripts/*.sh)",
      "Bash(az * --help *)",
      "Bash(az * --help)",
      "Bash(az * list *)",
      "Bash(az * query *)",
      "Bash(az * show *)",
      "Bash(az rest --method GET:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git merge-base:*)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)",
      "Bash(pnpm audit:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm outdated:*)",
      "Bash(pnpm run type-check:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm type-check:*)",
      "Bash(pnpm why:*)",
      "Read(~/.claude/CLAUDE.md)",
      "Read(~/.claude/settings.json)",
      "Read(~/.claude/skills/**)",
      "WebFetch(domain:next.shadcn-svelte.com)",
      "WebFetch(domain:raw.githubusercontent.com)"
    ],
    "deny": [
      "Edit(**/package.json)",
      "Write(**/package.json)",
      "Edit(~/.claude/settings.json)",
      "Write(~/.claude/settings.json)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/block_dangerous_commands.sh"
          }
        ]
      }
    ]
  },
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "Working"
    ]
  }
}