{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(./ecosystem/scripts/check-wip.sh:*)",
      "Bash(~/.claude/skills/azure-devops/scripts/ado-rest.sh --method GET *)",
      "Bash(~/.claude/skills/github-pr/scripts/*.sh)",
      "Bash(az --version:*)",
      "Bash(az * --help *)",
      "Bash(az * --help)",
      "Bash(az * list *)",
      "Bash(az * query *)",
      "Bash(az * show *)",
      "Bash(az rest --method get *)",
      "Bash(az version:*)",
      "Bash(gh pr list:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git merge-base:*)",
      "Bash(git remote -v)",
      "Bash(git rev-list:*)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)",
      "Bash(pnpm audit:*)",
      "Bash(pnpm outdated:*)",
      "Bash(pnpm run type-check:*)",
      "Bash(pnpm type-check:*)",
      "Bash(pnpm why:*)",
      "mcp__ado__repo_get_pull_request_by_id",
      "mcp__ado__repo_get_repo_by_name_or_id",
      "mcp__ado__repo_list_pull_requests_by_repo_or_project",
      "mcp__ado__search_workitem",
      "mcp__ado__wit_get_work_item",
      "mcp__ado__work_list_team_iterations",
      "mcp__context7__query-docs",
      "mcp__context7__resolve-library-id",
      "mcp__ide__getDiagnostics",
      "Read(/var/folders/s9/*/T/tmp.*)",
      "Read(~/.claude/CLAUDE.md)",
      "Read(~/.claude/settings.json)",
      "Read(~/.claude/skills/**)",
      "WebFetch(domain:next.shadcn-svelte.com)",
      "WebFetch(domain:raw.githubusercontent.com)"
    ],
    "deny": [
      "Edit(./ecosystem/scripts)",
      "Edit(.git)",
      "Edit(**/package.json)",
      "Edit(~/.bash_logout)",
      "Edit(~/.bash_profile)",
      "Edit(~/.bashrc)",
      "Edit(~/.claude/hooks)",
      "Edit(~/.claude/settings.json)",
      "Edit(~/.claude/skills/*/scripts)",
      "Edit(~/.claude/skills/cli-tools)",
      "Edit(~/.gitconfig)",
      "Edit(~/.profile)",
      "Edit(~/.zshrc)",
      "Write(./ecosystem/scripts)",
      "Write(.git)",
      "Write(**/package.json)",
      "Write(~/.bash_logout)",
      "Write(~/.bash_profile)",
      "Write(~/.bashrc)",
      "Write(~/.claude/hooks)",
      "Write(~/.claude/settings.json)",
      "Write(~/.claude/skills/*/scripts)",
      "Write(~/.claude/skills/cli-tools)",
      "Write(~/.gitconfig)",
      "Write(~/.profile)",
      "Write(~/.zshrc)",
      "mcp__ide__executeCode"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/block_dangerous_commands.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "agent-sdk-dev@claude-plugins-official": true
  },
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "Working"
    ]
  },
  "promptSuggestionEnabled": false,
  "autoUpdatesChannel": "stable",
  "minimumVersion": "2.1.42"
}